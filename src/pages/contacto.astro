---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contactanos!">
  <main class="max-w-[1200px] mx-auto px-5">
    <h3 class="text-center font-bold text-[2rem] my-5">Contacto</h3>
    <div class="w-full h-[400px] bg-[url(/contacto.jpg)] bg-cover bg-no-repeat">
    </div>
    <form class="bg-white mt-[-4rem] w-[90%] mx-auto p-10 rounded" action="">
      <div class="mb-6">
        <label class="block mb-1 font-bold text-lg" for="nombre">Nombre:</label>
        <input
          class="w-full border border-solid border-black py-2 px-2 border-opacity-30 rounded"
          type="text"
          name="nombre"
          id="nombre"
          placeholder="Tu Nombre"
          required
        />
      </div>

      <div class="mb-6">
        <label class="block mb-1 font-bold text-lg" for="correo">E-mail:</label>
        <input
          class="w-full border border-solid border-black py-2 px-2 border-opacity-30 rounded"
          type="email"
          name="correo"
          id="
          correo"
          placeholder="Tu E-mail"
          required
        />
      </div>

      <div class="mb-3">
        <label class="block mb-1 font-bold text-lg" for="mensaje"
          >Mensaje:</label
        >
        <textarea
          class="w-full h-[200px] border border-solid border-black py-2 px-2 border-opacity-30 rounded"
          name="mensaje"
          id="mensaje"
          required></textarea>
      </div>

      <button
        class="uppercase bg-black py-3 px-8 font-bold text-white text-lg mt-2 w-full md:w-max rounded"
        type="submit">Enviar</button
      >
    </form>
  </main>
</Layout>
